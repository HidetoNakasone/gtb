<!doctype html>
<html lang="ja">

<head>
  <title>
    <%= @title %>
  </title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
  <script async src="//cdn.embedly.com/widgets/platform.js" charset="UTF-8"></script>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css">
</head>

<body>

<header>
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
    <a class="navbar-brand" href="/">Good Tech Books</a>

    <div class="login">
      <% if session[:user_id] %>
        <% unless session[:image].nil? %>
          <div class="header-thumbnail">
            <img src="/image/users/<%= session[:user_id] %>/<%= session[:image] %>" alt="thumbnail"/>
          </div>
        <% end %>
        <div class="nickname">
          <%= session[:nickname] %>
        </div>
        <a href="/mypage" class="btn">
          My Page
        </a>
        <a href='/signout' class="btn">Sign Out</a>
      <% end %>
    </div>

  </nav>

</header>

<div class="container">

  <div class="flash fadeout">
    <%= flash[:messege] %>
  </div>

  <main role="main">
    <% unless @signup %>
      <div class="icons">
        <i class="fab fa-twitter fa-2x"></i>
        <i class="fab fa-facebook-f fa-2x"></i>
        <i class="fab fa-instagram fa-2x"></i>
      </div>
    <% end %>

    <%= yield %>
  </main>

</div>

<footer>

  <div class="icons">
    <i class="fab fa-twitter fa-2x"></i>
    <i class="fab fa-facebook-f fa-2x"></i>
    <i class="fab fa-instagram fa-2x"></i>
  </div>

</footer>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>

</html>
